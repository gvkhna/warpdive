---
export interface Props {
  error?: string | unknown | undefined | null
  errors?: string[] | unknown[] | undefined | null
  class?: string
}

const {error, errors, class: cls} = Astro.props

let displayError = ''
let displayErrors: string[] = []

if (errors && errors.length > 0) {
  for (let i = 0; i < errors.length; i++) {
    const err = errors[i]
    if (err && typeof err === 'string') {
      displayErrors.push(err)
    }
  }
} else if (error && typeof error === 'string') {
  displayError = error
} else if (error instanceof Error && 'details' in error && typeof error.details === 'string') {
  displayError = error.details
}
---

{
  (displayErrors.length > 0 || displayError.length > 0) && (
    <div class={`rounded-md bg-red-50 p-4 mb-4 ${cls || ''}`}>
      <div class='flex'>
        <div class='flex-shrink-0'>
          <svg
            class='h-5 w-5 text-red-400'
            viewBox='0 0 20 20'
            fill='currentColor'
            aria-hidden='true'
          >
            <path
              fill-rule='evenodd'
              d='M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z'
              clip-rule='evenodd'
            />
          </svg>
        </div>
        <div class='ml-3'>
          <h3 class='text-sm text-red-800'>
            {displayErrors.length > 0
              ? `There were ${displayErrors.length} errors with your submission`
              : `There was an error with your submission`}
          </h3>
          <div class='mt-2 text-sm text-red-700'>
            {displayErrors.length > 0 ? (
              <ul
                role='list'
                class='list-disc space-y-1 pl-5'
              >
                {displayErrors.map((str) => (
                  <li>{str}</li>
                ))}
              </ul>
            ) : (
              <p>{displayError}</p>
            )}
          </div>
        </div>
      </div>
    </div>
  )
}
